<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="Chipboard" table="chipboard">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name = "id" column = "id" type = "int"/>
        <property name = "sizeId" column = "sizeId" type = "int"/>
        <property name = "cost" column = "cost" type = "double"/>
    </class>

    <class name="ChipboardSize" table="chipboard_size">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name = "length" column = "length" type = "int"/>
        <property name = "width" column = "width" type = "int"/>
        <property name = "thicknes" column = "thicknes" type = "int"/>
    </class>

    <class name="Customer" table="customers">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name = "nip" column = "NIP" type = "int"/>
        <property name = "name" column = "name" type = "String"/>
        <property name = "discount" column = "discount" type = "double"/>
    </class>

    <class name="Income" table="income">
        <id name="operationId" type="int">
            <column name="operationId"/>
            <generator class="native"/>
        </id>
        <property name = "operation_value" column = "operation_value" type = "double"/>
        <property name = "orderId" column = "orderId" type = "int"/>
        <property name = "date" column = "operation_date" type = "java.sql.Timestamp"/>
    </class>

    <class name="OrderItem" table="order_item">
        <composite-id>
            <key-property name="chipboardId" column="chipboardId"/>
            <key-property name="orderId" column="orderId"/>
        </composite-id>
        <property name = "quantity" column = "quantity" type = "int"/>
    </class>

    <class name="Order" table="orders">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name = "customerId" column = "customerId" type = "int"/>
        <property name="paymentStatus" column="paymentStatus" type="org.hibernate.type.EnumType" />
        <property name="orderStatus" column="orderStatus" type="org.hibernate.type.EnumType" />
    </class>

    <class name="Warehouse" table="warehouse">
        <id name="chipboardId" type="int">
            <column name="chipboardId"/>
            <generator class="foreign"/>
        </id>
        <property name = "quantity" column = "quantity" type = "int"/>
    </class>

</hibernate-mapping>